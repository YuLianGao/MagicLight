<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_pressed="true" android:drawable="@drawable/icon_refresh">
        <solid android:color="@color/list_light"/>
    </item>
    <item android:state_focused="false" android:state_pressed="true" android:drawable="@drawable/icon_refresh"/>
    <item android:state_focused="true" android:drawable="@drawable/icon_refresh"/>
    <item android:state_focused="false" android:state_pressed="false" android:drawable="@drawable/icon_refresh">
        <shape android:shape="rectangle"  >
            <solid android:color="@color/white"/>
        </shape>
    </item>
</selector>