<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DefaultNumberPickerTheme" parent="AppTheme">
        <item name="colorControlNormal">@drawable/list_view_selector</item>
    </style>

    <style name="ColorMode">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/mode_border</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ColorMode1">
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/mode_border</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ModeButton">
        <item name="android:background">@drawable/list_view_custom</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="PopButton">
        <item name="android:background">@drawable/list_view_custom</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">120dp</item>
    </style>
    <style name="DIY_Button">
        <item name="android:background">@drawable/diy_border</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
    </style>
    <style name="MyMaterialTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark">
    </style>
</resources>
